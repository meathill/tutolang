    "lib": [
      "dom",
      "ESNext"
    ],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
